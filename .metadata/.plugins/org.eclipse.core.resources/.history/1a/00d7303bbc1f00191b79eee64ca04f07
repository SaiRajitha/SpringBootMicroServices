package com.project1.rest.webservices.restfulwebservices.customer;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

// controller
@RestController
public class PostResource {
	
	@Autowired
	private PostDaoService service;
	
	// retrieve all posts for a Customer
	// get method
	@GetMapping(path = "/customers/{customerId}/posts")
	public List<Post> retrievePosts(@PathVariable Integer customerId) {
		return service.retrievePosts(customerId);
	}
	// create a post for a Customer
	@GetMapping(path = "/customers/posts/create")
	public Post createPost(@RequestBody Post post) {
		return service.create(post);
	}
	
	// retrieve details of a post
	@GetMapping(path = "/customers/{customerId}/posts/{postid}")
	public String retrievePostDetails(@PathVariable Integer customerId, @PathVariable Integer postid) {
		return service.retrivePostDetails(postid);
	}
}
